<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  <link rel="stylesheet" href="style/mainPage.css" type="text/css" />
  <title>Facebook - Clone</title>
</head>

<body>
  <div class="myNavbar">
    <a href="/" class="active"><img src="" alt="" />facebook</a>
    <form id="form" action="/results" method="get">
      <input id="mySearchInput" type="text" placeholder="Search" name="searchWord" />
      <button id="searchButton">Search</button>
    </form>

    <div id="myLinks">
      <a href="/logout">Logout</a>

    </div>
  </div>
  <div class="page d-flex ">
    <div class="sidebar">
      <% if(!userIN){ %>
        <a href="/login">Login</a>
        <a href="/register">Register</a>
        <% }else{ %>
          <a href="/profile">Profile</a>
          <a href="/image">Photos</a>
          <a href="/message">Messages</a>

          <a href="/logout">Logout</a>
          <% } %>
    </div>
    <div class="container">
      <div class="myContainer">
        <div id="uploadImage">
          <form action="/" method="POST" enctype="multipart/form-data">
            <div class="descDiv">
              <textarea type="text" name="desc" id="desc" placeholder="Bugün ne düşünüyorsun?"></textarea>
            </div>
            <div class="imageUploadDiv">
              <input type="file" name="image" id="uploader" class="btn " required>
              <button type="submit" class="btn btn-info">Yükle</button>
            </div>
          </form>
        </div>
        <% items.photos.forEach(function(image) { %>

          <div class="card d-flex">
            <div class="userndesc">
              
              <p><b>
                  <%= image.public_id %>
                </b></p>
              <p id="description">
                <%= image.asset_id %>
              </p>
            </div>
            <div class="imagenbtn">
              <img id="image" src="<%= image.url %>" alt="">
              <a href="/delete/<%= image._id%>?_method=DELETE" class="btn btn-danger">Delete</a>

            </div>
          </div>
          <% }) %>


      </div>
    </div>

    <div class="allUsers">
      <% items.userData.forEach(function(user) { %>
        <div class="user">
          <a href="#"><span><%= user.name  %>
            </span></a>
        </div>
        <%})%>
    </div>


  </div>
  <script>
  </script>
</body>

</html>